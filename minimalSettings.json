{
  "workbench.colorTheme": "Origamid Next",
  "editor.wordWrap": "wordWrapColumn",
  "symbols.hidesExplorerArrows": false,
  "window.zoomLevel": 1,
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.rulers": [80, 120],
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderLineHighlight": "gutter",
  "editor.fontLigatures": true,
  "workbench.editor.labelFormat": "short",
  "editor.cursorBlinking": "expand",
  "explorer.compactFolders": false,
  "editor.semanticHighlighting": true,
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "workbench.statusBar.visible": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, package-lock*, bun.lockb",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "debug.console.fontFamily": "JetBrainsMono Nerd Font",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.autofetch": true,
  "gitlens.defaultDateLocale": "pt-BR",
  "redhat.telemetry.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "[c]": { "editor.tabSize": 4 },
  "[cpp]": { "editor.tabSize": 4 },
  "[csharp]": { "editor.tabSize": 4 },
  "[go]": { "editor.tabSize": 4 },
  "[kotlin]": { "editor.tabSize": 4 },
  "[swift]": { "editor.tabSize": 4 },
  "[rust]": { "editor.tabSize": 4 },
  "[php]": { "editor.tabSize": 4 },
  "cSpell.language": "pt-BR",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },
  "[java]": {
    "editor.defaultFormatter": "mngrm3a.vscode-google-java-formatter",
    "editor.tabSize": 4
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "jdk.jdkhome": "c:\\Program Files\\Java\\jdk-21",
  "java.debug.settings.console": "internalConsole",
  "eslint.lintTask.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "editor.dragAndDrop": true,
  "editor.formatOnType": true,
  "editor.renderWhitespace": "all",
  "sonarlint.rules": {
    "python:S125": {
      "level": "off"
    }
  },
  "terminal.integrated.gpuAcceleration": "off",
  "sound.enable": false,
  "window.enableSound": false,
  "accessibility.signals.lineHasError": {
    "sound": "off"
  },
  "accessibility.signals.lineHasBreakpoint": {
    "sound": "off"
  },
  "accessibility.signals.terminalQuickFix": {
    "sound": "off"
  },
  "accessibility.signals.onDebugBreak": {
    "sound": "off"
  },
  "accessibility.signals.noInlayHints": {
    "sound": "off"
  },
  "accessibility.signals.taskCompleted": {
    "sound": "off"
  },
  "accessibility.signals.taskFailed": {
    "sound": "off"
  },
  "accessibility.signals.notebookCellCompleted": {
    "sound": "off"
  },
  "accessibility.signals.notebookCellFailed": {
    "sound": "off"
  },
  "accessibility.signals.diffLineInserted": {
    "sound": "off"
  },
  "accessibility.signals.diffLineDeleted": {
    "sound": "off"
  },
  "accessibility.signals.lineHasInlineSuggestion": {
    "sound": "off"
  },
  "workbench.iconTheme": "symbols"
}
